<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_pizza_margherita">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        //MARGHERITA PIZZA
        <android.support.v7.widget.CardView
            android:id="@+id/card_detail_pizza_margherita"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPizzaMargherita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#7f333639"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="MARGHERITA PIZZA"
                    android:textColor="@android:color/white" />
                <ImageView
                    android:id="@+id/image_pizza_margherita"
                    android:layout_width="400dp"
                    android:layout_height="290dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/pz_margherita_pizza" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        //details
        <android.support.v7.widget.CardView
            android:id="@+id/card_detail2_pizza_margherita"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tomatoes, capsicum and pesto"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="bottom"
                    android:layout_gravity="right"
                    android:text="Price : 299 à¸¿"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        //edittext
        <EditText
            android:id="@+id/edt_pizza_margherita"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="TABLE  NUMBER"
            android:gravity="center"/>
        //button order
        <Button
            android:id="@+id/btn_pizza_margherita"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ORDER"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#2ECC71"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:textColor="@android:color/white"/>


    </LinearLayout>

</ScrollView>